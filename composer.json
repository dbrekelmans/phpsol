{
    "name": "dbrekelmans/phpsol",
    "type": "library",
    "license": "MIT",
    "description": "PHP Standard Object Library",
    "keywords": [
        "Object Library",
        "Standard Object Library"
    ],
    "homepage": "https://github.com/dbrekelmans/phpsol",
    "authors": [
        {
            "name": "DaniÃ«l Brekelmans",
            "homepage": "https://github.com/dbrekelmans"
        }
    ],
    "require": {
        "php": "^7.3"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "sensiolabs/security-checker": "^6.0",
        "dbrekelmans/coding-standard": "^1.0",
        "phpunit/phpunit": "^8.5",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "Phpsol\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phpsol\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit tests --colors"
        ],
        "compile": [
            "vendor/bin/phpcs --standard=phpcs.xml -s -n src tests",
            "vendor/bin/psalm"
        ],
        "fix": [
            "vendor/bin/phpcbf --standard=phpcs.xml src tests",
            "vendor/bin/psalm --alter"
        ]
    }
}
