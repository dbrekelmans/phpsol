{
    "name": "phpsol/phpsol",
    "type": "library",
    "license": "MIT",
    "description": "PHP Standard Object Library",
    "keywords": [
        "Object Library",
        "Standard Object Library"
    ],
    "homepage": "https://github.com/phpsol/phpsol",
    "authors": [
        {
            "name": "DaniÃ«l Brekelmans",
            "homepage": "https://github.com/dbrekelmans"
        },
        {
            "name": "Maarten Nusteling",
            "homepage": "https://github.com/nusje2000"
        }
    ],
    "require": {
        "php": "^7.4",
        "webmozart/assert": "^1.8"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "sensiolabs/security-checker": "^6.0",
        "dbrekelmans/coding-standard": "^1.0",
        "phpunit/phpunit": "^9.4",
        "phpstan/phpstan": "^0.12.48",
        "squizlabs/php_codesniffer": "^3.5",
        "vimeo/psalm": "^3.8",
        "symfony/console": "^5.1",
        "symfony/filesystem": "^5.1",
        "symfony/process": "^5.1"
    },
    "autoload": {
        "psr-4": {
            "Phpsol\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phpsol\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit tests --colors"
        ],
        "lint": [
            "vendor/bin/phpcs --standard=phpcs.xml -s -n src tests"
        ],
        "lint-fix": [
            "vendor/bin/phpcbf --standard=phpcs.xml src tests"
        ],
        "analyse": [
            "vendor/bin/psalm"
        ],
        "analyse-fix": [
            "vendor/bin/psalm --alter"
        ],
        "compile": [
            "@lint",
            "@analyse"
        ],
        "fix": [
            "@lint-fix",
            "@analyse-fix"
        ]
    }
}
